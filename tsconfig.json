{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
		],
		"paths": {
			"@angular/core": ["node_modules/@angular/core"],
			"@angular/common": ["node_modules/@angular/common"]
		},
		"rootDir": "."
	},
	"files": [
		"index.ts"
	],
	"exclude": [
		"node_modules"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true
	}
}
